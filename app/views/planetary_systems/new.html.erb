<%= form_with url: '/planetary_systems', method: :post, local: true do |form| %>
  <%= form.label :name, "Name" %>
  <%= form.text_field :name %><br>

  <%= form.label :light_years_from_earth, "Light Years From Earth" %>
  <%= form.text_field :light_years_from_earth %><br>

  <%= form.label :star_age, "Star Age" %>
  <%= form.text_field :star_age %><br>

  <%= form.label :metal_rich_star, "Metal Rich Star?" %>
  <%= form.text_field :metal_rich_star %>

  <%= form.submit "Create Planetary System" %>
<% end %>