<h3> Update Planet </h3>

<%= form_with url: "/planets/#{@planet.id}", method: :patch, local: true do |form| %>
  <%= form.label :name, "Name" %>
  <%= form.text_field :name %><br>
  
  <%= form.label :planet_type, "Planet Type" %>
  <%= form.text_field :planet_type %><br>
  
  <%= form.label :year_discovered, "Year Discovered" %>
  <%= form.number_field :year_discovered %><br>
  
  <%#= form.label :confirmed, "Confirmed?" %>
  <%#= form.text_field :confirmed %>
  <%= form.label :confirmed, "Confirmed?" %><br>
  <%= form.radio_button :confirmed, "true" %>
  <%= form.label :confirmed_true, "true" %>
  <%= form.radio_button :confirmed, "false" %>
  <%= form.label :confirmed_false, "false" %><br>
  
  <%= form.text_field :planetary_system_id, hidden: true, value: @planet.try(:planetary_system_id) %> 

  <%= form.submit "Update Planet" %>
<% end %>